{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run My Hello MCP Server",
      "env": {
        "FASTMCP_SERVER_PORT": "8888"
      },
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/my_python_ai_kata/mcp/my_hello_server.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Run My Hello MCP Client",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/my_python_ai_kata/mcp/my_hello_client.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Create sample vector store for LangGraph doc",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/my_python_ai_kata/mcp/vector_store_helpers.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Run Langgraph Query Tool MCP Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/my_python_ai_kata/mcp/langgraph_query_tool.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
